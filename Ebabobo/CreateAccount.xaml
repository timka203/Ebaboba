<Window x:Class="Ebabobo.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ebabobo"
        mc:Ignorable="d"
        Title="CreateAccount" Height="200" Width="400">
    <StackPanel Background="Bisque" >
        <TextBlock Margin="5 5 0 0" FontSize="15" FontWeight="Bold">Введите название кошелька</TextBlock>
        <TextBox Margin="0 5 5 0" Width="200" HorizontalAlignment="Right" x:Name="tb_accountName"/>
        <TextBlock Margin="5 5 0 0" FontSize="15" FontWeight="Bold">Выберите валюту</TextBlock>
        <ComboBox HorizontalAlignment="Right"  Width="100" x:Name="cbCurrency" Margin="0 0 5 0">

        </ComboBox>
        <Button Style="{StaticResource SecondaryButton}" Margin="0 5 5 0" Content="Добавить" Width="100" HorizontalAlignment="Right" Click="addAccountBtn"></Button>
    </StackPanel>
</Window>
